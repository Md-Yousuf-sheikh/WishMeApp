{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@routes/*": [
        "src/routes/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@env": [
        "env.ts"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@components/*": [
        "src/components"
      ],
    }
  }
}